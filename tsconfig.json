{
  "compilerOptions": {
    "target": "es2017",                                  
    "module": "commonjs",                             
    "rootDir": "./src",                               
    "allowJs": true,                               
    "outDir": "./dist",                                
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,         
    "strict": false,                                   
    "skipLibCheck": true,
    "typeRoots": ["./src/@types", "node_modules/@types"],       
  }
}
